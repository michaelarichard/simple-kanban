# Simple Kanban Board - Environment Configuration Template
# Copy this file to .env and update with your actual values

# Application Configuration
APP_NAME=simple-kanban
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true

# Security Configuration
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=Simple Kanban Board
PROJECT_DESCRIPTION=Self-hosted kanban board with story planning

# Database Configuration
DATABASE_URL=postgresql+asyncpg://kanban:kanban@localhost:5432/simple_kanban
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=simple_kanban
POSTGRES_USER=kanban
POSTGRES_PASSWORD=kanban

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Session Configuration
SESSION_SECRET_KEY=your-session-secret-key-here
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=lax

# CORS Configuration
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8000","http://localhost:8080"]

# OAuth2 Configuration (if using external providers)
OAUTH2_CLIENT_ID=your-oauth2-client-id
OAUTH2_CLIENT_SECRET=your-oauth2-client-secret
OAUTH2_REDIRECT_URI=http://localhost:8000/auth/callback

# Email Configuration (for notifications)
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_TLS=true
EMAIL_FROM=noreply@simple-kanban.local

# File Upload Configuration
MAX_UPLOAD_SIZE=10485760  # 10MB
UPLOAD_PATH=/app/uploads

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=200

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090

# Development Configuration
RELOAD=true
HOST=0.0.0.0
PORT=8000

# Testing Configuration
TEST_DATABASE_URL=postgresql+asyncpg://kanban:kanban@localhost:5432/simple_kanban_test
